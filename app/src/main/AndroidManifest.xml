<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.concert.sierfgravador">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SIERFGravador">
        <activity android:name=".activities.ListActivity"
            android:parentActivityName=".activities.ConnectionActivity"></activity>
        <activity android:name=".activities.MainActivity"
            android:parentActivityName=".activities.ListActivity"/>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/Theme.SIERFGravador.NoActionBar" />
        <activity android:name=".activities.InstructionsActivity"
            android:parentActivityName=".activities.LoginActivity"/>
        <activity android:name=".activities.ConnectionActivity"
            android:parentActivityName=".activities.InstructionsActivity"/>
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SIERFGravador.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>